@using EntityLayer.Concrate
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Basic Table</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Baslik.</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Guncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ExperienceID</td>
                                <td>@item.Name</td>
                                <td>@item.Date</td>
                                <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="#" class="btn btn-outline-success">Guncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="#" class="btn btn-outline-info">Yeni Deneyim Ekle</a>
            </div>
        </div>
    </div>
</div>

